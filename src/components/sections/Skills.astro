---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import React from "@/icons/react.astro"
import MySQL from "@/icons/sql.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Tailwind from "@/icons/tailwind.astro"
import { skills } from "@cv"
import PHP from "@/icons/php.astro"
import WordPress from "@/icons/wordpress.astro"
import Python from "@/icons/python.astro"
import FastAPI from "@/icons/fastapi.astro"
import Bootstrap from "@/icons/bootstrap.astro"
import Laravel from "@/icons/laravel.astro"
import MongoDB from "@/icons/mongoDB.astro"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  React,
  MySQL,
  Git,
  GitHub,
  Tailwind,
  Bootstrap,
  PHP,
  WordPress,
  Python,
  FastAPI,
  Laravel,
  MongoDB,
}
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        const iconName = name === "Laravel" ? "Laravel" : name
        const Icon = SKILLS_ICONS[iconName]

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>